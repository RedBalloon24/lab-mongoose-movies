<h2>Edit Movie</h2>
{{#each movies as |movie|}}
    <form action="/movies/{{movie._id}}" method="POST">

     <div class="form-group">
        <label>Title</label>
        <input type="text" class="form-control {{#if errors.title }}is-invalid{{/if}}" name="title" value="{{movie.title}}" placeholder="Enter movie title">

        {{#if errors.title}}
            <div class="invalid-feedback">
                {{errors.title}}
            </div>
        {{/if}}
    </div>

    <div class="form-group">
        <label>Genre</label>
        <input type="text" class="form-control {{#if errors.genre }}is-invalid{{/if}}" name="genre" value="{{movie.genre}}" placeholder="Enter movie genre">


        {{#if errors.genre}}
            <div class="invalid-feedback">
                {{errors.genre}}
            </div>
        {{/if}}
    </div>

    <div class="form-group">
        <label>Plot</label>
        <input type="text" class="form-control {{#if errors.plot }}is-invalid{{/if}}" title="plot" value="{{movie.plot}}" placeholder="Enter movie plot">


        {{#if errors.plot}}
            <div class="invalid-feedback">
                {{errors.plot}}
            </div>
        {{/if}}
    </div>
  
    <div class="d-flex">
        <button type="submit" class="btn btn-danger btn-sm text-white mr-3">Submit Edit</button>
    </div>
    </form>
{{/each}}